<form method="post" action="/team">
  <h1>Create a Team and Heroes!</h1><br>
  <p>
    <label for="name">Team Name:</label>
    <input type="text" name="team[name]">
    <label for="motto">Team Motto:</label>
    <input type="text" name="team[motto]">
  </p>
  <h2>Hero 1</h2>
  <p>
    <label for="member1_name">Hero's Name:</label>
    <input type="text" id="member1_name" name="team[member][][name]">
    <label for="member1_power">Hero's Power:</label>
    <input type="text" id="member1_power" name="team[member][][power]">
    <label for="member1_biography">Hero's Biography:</label>
    <input type="text" id="member1_biography" name="team[member][][name]">
  </p>
  <input type="submit" value="Submit">
</form>